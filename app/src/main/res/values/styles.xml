<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JTextView">
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="AppTheme.LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_launch</item>
    </style>

    <style name="AppTheme.TransitionsTheme" parent="AppTheme">
    </style>
</resources>
